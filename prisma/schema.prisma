datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  email       String   @unique
  passwordHash String
  phone       String?
  address     String?
  image       String?
  createdAt   DateTime @default(now())
}

model Patient {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  phone     String
  idnum     String
  lastVisit DateTime?
  dob       DateTime?
  address   String?
  notes     String?
  gender    String?
  status    PatientStatus? @default(LOW)
  createdAt DateTime       @default(now())

  documents PatientDocument[]
}



model PatientDocument {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  patientId String
  title     String
  date      DateTime
  isFavorite Boolean @default(false)

  fileName  String
  fileData  String   // Base64 PDF

  patient   Patient  @relation(fields: [patientId], references: [id])
}


model Appointment {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  patientId  String   @db.ObjectId
  date       DateTime
  room       String?
  type       AppointmentType
  status     AppointmentStatus @default(SCHEDULED)
  createdAt  DateTime @default(now())
}

model Invoice {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  patientId  String   @db.ObjectId
  amount     Float
  status     InvoiceStatus @default(PENDING)
  dueDate    DateTime?
  createdAt  DateTime @default(now())
}

enum PatientStatus {
  LOW
  MEDIUM
  HIGH
}

enum AppointmentType {
  CHECKUP
  FOLLOWUP
  EMERGENCY
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  PENDING
  PAID
}
